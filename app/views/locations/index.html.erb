
<!-- Create Event link takes user to page to create a new event at that location. -->

<div class="container">
  <div class="page-header">

<div class="pull-right"><%= link_to 'Create Location', new_location_path, class: "btn btn-info" %>
</div>
<h1>Locations</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th> Name </th>
    <th> Address </th>
    <th> Zipcode </th>
    <th colspan="3"></th>
  </tr>

  <tbody>
    <% @locations.each do |location| %>
    <tr>
      <td><%= link_to location.name location %></td>
      <td><%= location.address %></td>
      <td><%= location.zipcode %></td>
    </tr>
  <tbody>
  <% end %>
</table>
