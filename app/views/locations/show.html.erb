<div class="container">
  <div class="page-header">
    <% if notice %>
    <div class= "alert alert-success"><%= notice %></div>
    <% end %>


    <div class="pull-right">
      <%= link_to 'Edit', edit_location_path, class: "btn btn-info" %>
      <%= link_to 'Delete', @location, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td></div>
      <h1><%= @location.name %></h1>
    </div>


    <dl class="dl-horizontal">
      <dt>Address: </dt>
      <dd><%= @location.address %></dd><br>
      <dt>Zipcode: </dt>
      <dd><%= @location.zipcode %></dd><br>
    </dl>


    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th> Event </th>
          <th> Event Date </th>
          <th> Requires ID </th>
          <!-- <th colspan="3"></th> -->
        </tr>

        <tbody>
          <% @location.events.each do |event|%>
          <tr>
            <td><%= event.description %></td>
            <td><%= event.date %></td>
            <td><%= event.requires_id %></td>

              </tr>
              <tbody>
                <% end %>
              </table>
