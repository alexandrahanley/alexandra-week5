<%= form_for [@location, @event], html: {class: "form-horizontal"} do |f| %>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :description %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :date %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.date_field :date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label "Requires ID" %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :requires_id, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
</div>





<% end %>
